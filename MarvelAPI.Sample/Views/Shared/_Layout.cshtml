<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="MarvelAPI : C# wrapper for Marvel&#39;s REST API" />
    <title>MarvelAPI - @ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" media="screen" href="/css/stylesheet.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <div id="header_wrap" class="outer">
        <header class="inner">
            <a id="forkme_banner" href="https://github.com/foilking/MarvelAPI">View on GitHub</a>

            <h1 id="project_title">MarvelAPI</h1>
            <h2 id="project_tagline">C# wrapper for Marvel&#39;s REST API</h2>

            <section id="downloads">
                <a class="zip_download_link" href="https://github.com/foilking/MarvelAPI/zipball/master">Download this project as a .zip file</a>
                <a class="tar_download_link" href="https://github.com/foilking/MarvelAPI/tarball/master">Download this project as a tar.gz file</a>
            </section>
        </header>
    </div>
    <!-- MAIN CONTENT -->
    <div id="main_content_wrap" class="outer">
        <section id="main_content" class="inner">
            @RenderBody()
        </section>
    </div>
    <!-- FOOTER  -->
    <div id="footer_wrap" class="outer">
        <footer class="inner">
            <p class="copyright">MarvelAPI maintained by <a href="https://github.com/foilking">foilking</a></p>
            <p>Data provided by Marvel. © 2014 Marvel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ember")
    @RenderSection("scripts", required: false)
</body>
</html>
